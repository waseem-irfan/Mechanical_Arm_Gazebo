            <child link="Thumb2_link" />
            <origin xyz="0 ${-Thumb_length} 0" rpy="0 0 0" />
            <axis xyz="1 0 0" />
            <limit lower="0" upper="-1.57" effort="100" velocity="100" />
            <mimic joint="Thumb" multiplier="1.0" offset="0.0"/>
        </joint>
</robot>