                <material name="Wood" />
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="${radius}" length="${Ring_length}" />
                </geometry>
                <origin xyz="${Ring_length / 2} 0 0" rpy="0 ${pi / 2.0} 0" />            
            </collision>
            <xacro:finger_inertia m="0.05" r="${radius}" h="${Ring_length}"
