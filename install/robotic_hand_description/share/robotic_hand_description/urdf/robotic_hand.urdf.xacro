            <xacro:finger_inertia m="0.05" r="${radius}" h="${Middle_length}"
                                xyz="${Middle_length / 2.0} 0 0" rpy="0 ${pi / 2.0} 0" />
        </link>

        <joint name="Middle_finger" type="revolute">
            <parent link="base_link" />
            <child link="Middle1_link" />
